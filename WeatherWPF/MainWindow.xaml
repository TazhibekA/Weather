        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="180*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="0,46,0,0" TextWrapping="Wrap" Text="Введите город: " VerticalAlignment="Top" Grid.ColumnSpan="5" Width="211"  FontSize="20" Height="27"/>
